      <div class="autor">
        <div class="row">
        <div class = "all-author col-sm-12 col-md-6 col-lg-6">
           <div class="clearfix visible-sm-block"></div>
          <div class = "box-author">
              <%= image_tag("Glory.jpg", class: 'photo-author', alt: "image_autor")%>
          </div>
          <div class = "all">
            <span class="paragraph-title"><%= t ("author.author-name") %></span>
