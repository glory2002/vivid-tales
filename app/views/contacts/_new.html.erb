<h1 class = "contact-title"><%= t("contact.title")%></h1>

<div>
  <%= form_for @contact do |f| %>
  <%= f.label t ("contact.name"), class:"text-label" %><br>
  <%= f.text_field :name, requested: true, class:"input-label" %>

  <br>

  <%= f.label t ("contact.email"), class:"text-label" %><br>
  <%= f.text_field :email, requested: true, class:"input-label" %>

  <br>

  <%= f.label t ("contact.about"), class:"text-label" %><br>
  <%= f.text_field :about, requested: true, class:"input-label" %>

  <br>

  <%= f.label t ("contact.message"), class:"text-label" %><br>
  <%= f.text_area :message, as: :text, class:"input-message" %>

  <br>

  <div class='hidden'>
    <%= f.label :nickname %><br>
    <%= f.text_field :nickname, hint: 'остави това поле празно' %>
  </div>

  <%= f.submit t ("contact.send") %>
  <% end %>

</div>
